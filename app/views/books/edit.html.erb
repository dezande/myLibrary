<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <div class="col-md-4 col-md-offset-4 card">
    <div class="form-inputs">
      <div class="row">
        <div class="col-md-6">
          <%= f.input :title, required: true, autofocus: true %>
        </div>
        <div class="col-md-6">
          <%= f.input :author, required: true %>
        </div>
        <div class="col-md-12">
          <%= f.input :summary, as: :text %>
        </div>
        <div class="form-actions text-center col-md-12">
          <%= f.button :submit, "Edit book", class: "btn btn-primary" %>
          <br>
          <%= link_to "Back", :back %>
        </div>
      </div>
    </div>
  </div>
<% end %>
