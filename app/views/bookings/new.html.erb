<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>
  <div class="col-md-4 col-md-offset-4 card">
    <% if @books.count != 0 %>
      <div class="form-inputs">
        <div class="row">
          <div class="col-md-6">
            <%= f.collection_select :user_id, @users, :id, :email  %>
          </div>
            <div class="col-md-6">
            <%= f.collection_select :book_id, @books, :id, :title %>
          </div>
          <div class="form-actions text-center col-md-12">
            <%= f.button :submit, "Borrow", class: "btn btn-primary" %>
            <br>
            <%= link_to "Back", :back %>
          </div>
        </div>
      </div>
    <% else %>
      <p>No more books available!</p>
    <% end %>
  </div>
<% end %>

