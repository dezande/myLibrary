<div class="col-md-8 col-md-offset-2">

  <h3>Users</h3>
  <%= link_to('Add user', new_user_path) %>
  <% @users.each do |user| %>
    <div class="card">
      <% if user.photo  %>
        <%= image_tag user.photo, width: 80, height: 80, crop: :fill %>
      <% end %>
      <p><%= user.first_name %> <%= user.last_name %></p>
      <p><%= user.email %></p>
      <%= link_to('Edit', edit_user_path(user)) %>

      <% if user.bookings.count == 0 %>
        <%= link_to user, method: :delete, remote: true, data: {confirm: "Are you sure?"} do %>
          <p>delete</p>
        <% end %>
      <% end %>

      <% if user.bookings.count != 0 %>
        <p>Borrowed books</p>
        <% user.bookings.each do |booking| %>
          <%= booking.book.title %><br>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
