<div class="col-md-8 col-md-offset-2">

  <h3>Users</h3>
  <%= link_to('Add user', new_user_path) %>
  <% @users.each do |user| %>
    <div class="card">
      <p><%= user.first_name %> <%= user.last_name %></p>
      <p><%= user.email %></p>
      <%= link_to('Edit', edit_user_path(user)) %>
      <%= link_to user, method: :delete, remote: true, data: {confirm: "Are you sure?"} do %>
        <p>delete</p>
      <% end %>
    </div>
  <% end %>
</div>
