<div class="col-md-6 col-md-offset-3">
  <div class="text-center">
    <h3 style="display:inline">Users</h3>
    <%= link_to(new_user_path) do %>
      <i class="fa fa-plus-square fa-2x" aria-hidden="true" style="display:inline"></i>
    <% end %>
  </div>
  <% @users.each do |user| %>
    <div class="card">
      <div class="row">
        <div class="col-md-2">
          <% if user.photo? %>
            <%= image_tag user.photo.path, width: 80, height: 80, crop: :fill %>
          <% else %>
            <%= image_tag "default-avatar.png", width: 80, height: 80, crop: :fill %>
          <% end %>
        </div>
        <div class="col-md-10">
          <%= link_to(user_path(user)) do %>
            <h4><%= user.first_name %> <%= user.last_name %></h4>
          <% end %>
          <p><%= user.email %></p>
          <%= link_to(edit_user_path(user)) do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %>
          <% if user.bookings.count == 0 %>
            <%= link_to user, method: :delete, remote: true, data: {confirm: "Are you sure?"} do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
